<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="start"
    android:background="#a8a7ff"
    android:id="@+id/drawer"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="240dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F0F096"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextView16"
                    android:layout_width="181dp"
                    android:layout_height="match_parent"
                    android:background="#F0F096"
                    android:ems="10"
                    android:fontFamily="@font/fontstyle"
                    android:gravity="center_vertical"
                    android:inputType="textPersonName"
                    android:text="알림 안내 권한"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/button2"
                    android:background="@drawable/opento"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextView15"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:inputType="textPersonName"
                    android:text="권한 허용 여부"
                    android:textColor="#000000"
                    android:fontFamily="@font/fontstyle"/>

                <Button
                    android:id="@+id/button3"
                    android:layout_width="18dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/on2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:background="#F0F096" >

                <TextView
                    android:id="@+id/TextView14"
                    android:layout_width="182dp"
                    android:layout_height="match_parent"
                    android:background="#F0F096"
                    android:ems="10"
                    android:fontFamily="@font/fontstyle"
                    android:gravity="center_vertical"
                    android:inputType="textPersonName"
                    android:text="블루투스 연결"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/button4"
                    android:background="@drawable/opento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00BCD4"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:background="#FFFFFF">

                    <TextView
                        android:id="@+id/TextView13"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:inputType="textPersonName"
                        android:text="현재 상태"
                        android:textColor="#000000"
                        android:fontFamily="@font/fontstyle"/>

                    <Button
                        android:id="@+id/button5"
                        android:background="@drawable/on2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/TextView12"
                        android:layout_width="83dp"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:inputType="textPersonName"
                        android:text="연결된 기기"
                        android:textColor="#000000"
                        android:fontFamily="@font/fontstyle"/>

                    <TextView
                        android:id="@+id/deviceview"
                        android:layout_width="159dp"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/TextView11"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#F0F096"
                android:ems="10"
                android:gravity="center_vertical"
                android:inputType="textPersonName"
                android:text="사운드 설정"
                android:textColor="#000000"
                android:fontFamily="@font/fontstyle"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="#00BCD4"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/TextView10"
                        android:layout_width="65dp"
                        android:layout_height="45dp"
                        android:background="#FFFFFF"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:inputType="textPersonName"
                        android:text="볼륨"
                        android:textColor="#000000"
                        android:fontFamily="@font/fontstyle"/>

                    <SeekBar
                        android:id="@+id/volumeBar"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:tickMarkTint="#E91E63"
                        android:background="#FFFFFF"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:background="#FFFFFF">

                    <TextView
                        android:id="@+id/TextView9"
                        android:layout_width="93dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="읽기 속도"
                        android:background="#FFFFFF"
                        android:textColor="#000000"
                        android:fontFamily="@font/fontstyle"/>

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="36dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:entries="@array/볼룜"
                        android:fontFamily="@font/fontstyle"/>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/TextView8"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#F0F096"
                android:ems="10"
                android:gravity="center_vertical"
                android:inputType="textPersonName"
                android:text="읽기 설정"
                android:textColor="#000000"
                android:fontFamily="@font/fontstyle"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:background="#FFFFFF">

                <TextView
                    android:id="@+id/TextView6"
                    android:layout_width="96dp"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:ems="10"
                    android:fontFamily="@font/fontstyle"
                    android:gravity="center_vertical"
                    android:inputType="textPersonName"
                    android:text="TTS 엔진 설정"
                    android:textColor="#000000" />

                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </LinearLayout>

            <TextView
                android:id="@+id/TextView5"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#F0F096"
                android:ems="10"
                android:gravity="center_vertical"
                android:inputType="textPersonName"
                android:text="알림설정"
                android:textColor="#000000"
                android:fontFamily="@font/fontstyle"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:background="#FFFFFF"
                >

                <TextView
                    android:id="@+id/TextView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="수신 시 알림음 재생"
                    android:textColor="#000000"
                    android:fontFamily="@font/fontstyle"/>

                <Button
                    android:id="@+id/button6"
                    android:background="@drawable/on2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <TextView
                android:id="@+id/TextView3"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#F0F096"
                android:ems="10"
                android:gravity="center_vertical"
                android:inputType="textPersonName"
                android:text="재생 텍스트 내용 설정"
                android:textColor="#000000"
                android:fontFamily="@font/fontstyle"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:background="#FFFFFF">

                    <TextView
                        android:id="@+id/contentsText2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:inputType="textPersonName"
                        android:text="간략모드"
                       android:textColor="#000000"
                        android:fontFamily="@font/fontstyle"/>

                    <Button
                        android:id="@+id/button7"
                        android:background="@drawable/on2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:background="#FFFFFF">

                    <TextView
                        android:id="@+id/contentsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:inputType="textPersonName"
                        android:text="발신내용"
                        android:textColor="#000000"
                        android:fontFamily="@font/fontstyle"/>

                    <Button
                        android:id="@+id/button8"
                        android:background="@drawable/on2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:background="#FFFFFF"
                    >

                    <TextView
                        android:id="@+id/receivedDateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:inputType="textPersonName"
                        android:text="발신시간"
                        android:textColor="#000000"
                        android:fontFamily="@font/fontstyle"/>

                    <Button
                        android:id="@+id/button9"
                        android:background="@drawable/on2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/SMSText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F0F096"
                android:gravity="center_vertical"
                android:text="TextView"
                android:textColor="#000000"
                android:fontFamily="@font/fontstyle"
                />

            <Button
                android:id="@+id/button11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="stop"
                android:fontFamily="@font/fontstyle"/>

            <TextView
                android:id="@+id/textViewv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="음성표식"
                android:textColor="#000000"
                android:fontFamily="@font/fontstyle"/>

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="그만"
                android:visibility="gone"
                android:fontFamily="@font/fontstyle"/>

            <TextView
                android:id="@+id/sttview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="그 만"
                android:visibility="gone"/>

            <Button
                android:id="@+id/sttBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="음성인식"
                android:fontFamily="@font/fontstyle"/>

            <TextView
                android:id="@+id/nameTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" "
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/textlength"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" "
                />

        </LinearLayout>
    </ScrollView>



</LinearLayout>
